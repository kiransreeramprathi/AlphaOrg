<apex:page controller="Basic_tasks" lightningStylesheets="true" >
    <apex:form >
        <apex:pageBlock title="Basic tasks"  >
            <apex:pageBlockSection collapsible="true" title="integer in action" columns="1" >
                <apex:inputText label="input 1" value="{!input1}" size="12"/>
             <apex:inputText label="input 2" value="{!input2}"/>
                <apex:outputtext label="Integer result :" value="{!outputvalue}" />
                <apex:commandButton action="{!Addition}" value="జోడించు (ADD)"/>
                <apex:commandButton action="{!substract}" value="తీసివేయుము (subtract)"/>
                <apex:commandButton action="{!divide}" value="విభజించుు (Divide)" />
        </apex:pageBlockSection>
            <br/>
            <apex:pageBlockSection collapsible="true" title="string in action" columns="1">
            <apex:inputText label="input 1" value="{!inputA}"/>
             <apex:inputText label="input 2" value="{!inputB}"/>
                <apex:outputtext label="string result :" value="{!output}"/>
                <apex:commandButton action="{!addstrings}" value="join 2 strings"/>
                <apex:commandButton action="{!stringlength}" value="calculate string length"/>
                <apex:commandButton action="{!palindrome}" value="palindrome check"/>
        </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>