<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_number</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( Phone_number__c  ,&quot;^[0-9]&quot;))&amp;&amp;  len(Phone_number__c) &lt;&gt;10</errorConditionFormula>
    <errorDisplayField>Phone_number__c</errorDisplayField>
    <errorMessage>Phone number should 10 digit number</errorMessage>
</ValidationRule>
