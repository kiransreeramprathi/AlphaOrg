<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>last_name</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(  Last_name__c  ,&quot;^[a-z  A-Z]*$&quot;))</errorConditionFormula>
    <errorDisplayField>Last_name__c</errorDisplayField>
    <errorMessage>Please enter only alphabets</errorMessage>
</ValidationRule>
