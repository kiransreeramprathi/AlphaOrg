<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Employee_Minimum_Age</fullName>
    <active>true</active>
    <errorConditionFormula>IF( Age__c  &lt; 22, true, false)</errorConditionFormula>
    <errorDisplayField>Date_of_Birth__c</errorDisplayField>
    <errorMessage>Age should be minimum 22 years for employee.</errorMessage>
</ValidationRule>
